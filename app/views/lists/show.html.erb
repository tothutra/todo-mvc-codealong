<section class="todoapp">
      <header class="header">
        <h1><%= @list.name %></h1>
        <input class="new-todo" placeholder="Add an item to the list" autofocus="">
      </header>

      <section class="main" style="display: block;">
        <input class="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul class="todo-list">
            <li>
              <div class="view">
                <label>Milk</label>
              </div>
            </li>
            <li>
              <div class="view">
                <label>Egg</label>
              </div>
            </li>
        </ul>
      </section>

      <footer class="footer" style="display: block;">
    </section>